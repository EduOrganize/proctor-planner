{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["frontend/src/components/*"]
    }
  },
  "include": ["frontend/**/*", "backend/**/*"],
  "exclude": ["node_modules", "dist"]
}